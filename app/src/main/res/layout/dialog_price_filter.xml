<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/d_min_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/construction_price_min_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/d_min_price_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/d_max_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/construction_price_max_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/d_max_price_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>